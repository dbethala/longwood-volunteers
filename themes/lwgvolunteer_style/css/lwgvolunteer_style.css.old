/* media (max-width: 900px) and (min-width: 461px) */
.region-primary-menu .menu {
    margin: 0px 30px;
    padding: 0;
    text-align: center;
}

.responsive-menu-toggle-icon {
    box-sizing: border-box;
    display: block;
    width: 102px;
    height: 35px;
    z-index: 4;
    margin-top: 0;
    position: relative;
}


.field--type-image img, .field--name-field-user-picture img {
   height: auto;
}

/* Spacing between drop-down primary menu items */
.region-primary-menu .menu a {
	color: #333;
	background: #ccc;
	background: white;
	float: none;
	display: block;
	text-decoration: none;
	text-shadow: 0 1px #eee;
	border-radius: 0px;
	margin: -4px 2px;
	padding: 0.9em 28px 0.9em 28px;
}

/* Responsive menu theme */
.responsive-menu-toggle-icon span.label {
	color: rgba(0,191,179,0.9);
}

.responsive-menu-toggle-icon::before, .responsive-menu-toggle-icon::after, .responsive-menu-toggle-icon span.icon {
	background: rgba(0,191,179,0.9);
}

#volunteer_dropdown_item_1 {
	padding: 0.9em 50px 0.9em 50px;
}

